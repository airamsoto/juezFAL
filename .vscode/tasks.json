{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "${file}",
                "-o",
                "${fileDirname}/a.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "silent",
                "close": true
            },
            "detail": "Compila el archivo actual en C++17 con g++ y genera un ejecutable llamado a.out en el mismo directorio que el archivo .cpp"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${fileDirname}/a.out",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "close": true
            },
            "detail": "Ejecuta el programa compilado en el mismo directorio que el archivo .cpp sin abrir el depurador"
        }
    ]
}
